# ------------------------------------------------------------------------------
# Base image
# ------------------------------------------------------------------------------
FROM python:3.7

# ------------------------------------------------------------------------------
# PORT EXPOSE
# ------------------------------------------------------------------------------
EXPOSE 8000
# ------------------------------------------------------------------------------
# Install dependencies
# ------------------------------------------------------------------------------
COPY requirements.txt /tmp/requirements.txt
RUN python3 -m pip install -r /tmp/requirements.txt

 
CMD ["python", "manage.py", "runserver", "0.0.0.0", ":8000"]